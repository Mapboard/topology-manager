{
  "name": "postgis-geologic-map",
  "version": "2.0.0-beta",
  "description": "A PostGIS helper library to manage a geologic map",
  "author": "Daven Quinn",
  "license": "MIT",
  "bin": {
    "postgis-geologic-map": "bin/geologic-map"
  },
  "scripts": {
    "preinstall": "npm --prefix packages/mapboard-server install",
    "compile": "./bin/compile",
    "start": "./bin/geologic-map-serve-dev",
    "build": "npm --prefix packages/mapboard-server run build",
    "dev:server": "npm --prefix packages/mapboard-server run dev",
    "dev:topo": "nodemon --ignore extensions/web/dist src/geologic-map serve",
    "dev": "npm-run-all --parallel dev:**",
    "test": "ava --verbose"
  },
  "browserslist": [
    "> 1%"
  ],
  "extensions": {
    "geologic-map-display": "file:./extensions/display",
    "fill-patterns": "file:./extensions/fill-patterns",
    "live-tiles": "file:./extensions/live-tiles",
    "demo-units": "file:./extensions/demo-units"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@mapbox/postgis-vt-util": "^1.2.1",
    "axios": "^0.18.1",
    "babel-polyfill": "^6.26.0",
    "bluebird": "^3.5.1",
    "cli-progress": "^3.4.0",
    "colors": "^1.1.2",
    "express": "^4.16.4",
    "glob": "^7.1.2",
    "glob-promise": "^3.3.0",
    "inquirer": "^4.0.1",
    "mapboard-server": "file:./packages/mapboard-server",
    "mapbox-gl": "^0.53.1",
    "mapbox-gl-utils": "^0.26.1",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5",
    "pg": "^8.5.0",
    "pg-copy-streams": "^5.1.1",
    "pg-promise": "^10.7.3",
    "pkg": "^4.4.0",
    "progress": "^2.0.0",
    "pug": "^2.0.0-rc.4",
    "socket.io": "^2.2.0",
    "socket.io-client": "^2.2.0",
    "sql-strip-comments": "0.0.23",
    "tsparser": "^1.0.2",
    "underscore": "^1.9.1",
    "yargs": "^10.0.3"
  },
  "pkg": {
    "assets": [
      "**/*.coffee",
      "extensions/*/package.json",
      "extensions/**/*.pug",
      "**/*.sql",
      "extensions/**/web/dist/*.*",
      "extensions/live-tiles/src/map-style/base-style.json",
      "node_modules/@mapbox/mbtiles/lib/**/*.*"
    ]
  },
  "devDependencies": {
    "ava": "^3.14.0",
    "coffeescript": "^2.4.1",
    "cssnano": "^4.1.10",
    "linklocal": "^2.8.2",
    "parcel-bundler": "^1.12.3",
    "stylus": "^0.54.5"
  }
}
